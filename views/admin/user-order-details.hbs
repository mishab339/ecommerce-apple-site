<section>
    <div class="container order-details-container mt-5">
         <h4 class="text-center user-login-header mt-4">Order Details</h4>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th>Address</th>
                    <th>Pincode</th>
                    <th>Mobile</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Payment</th>
                    <th>Status</th>
                    <th>Tracking</th>
                </tr>
            </thead>
            <tbody>
                {{#each orderDetails}}
                <tr>
                    <td>{{this.date}}</td>
                    <td>{{this.deliveryDetails.address}}</td>
                    <td>{{this.deliveryDetails.pincode}}</td>
                    <td>{{this.deliveryDetails.mobile}}</td>
                    <td>{{this.totalAmount}}</td>
                    <td>{{this.paymentMethod}}</td>
                    <td>{{this.status}}</td>
                    <td>
                     <button type="submit" class="btn btn-success" onclick="changeStatus('{{this._id}}')">shipped</button>
                    </td>
                    <td>
                        <a class="btn btn-primary view-products-button" href="/admin/view-order-products/{{this._id}}">view Products</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
<script>
function changeStatus(orderId){
    $.ajax({
        url:'/admin/change-status',
        data:{orderId},
        method:'post',
        success:(response)=>{
           location.reload();
        }
    })
}
</script>