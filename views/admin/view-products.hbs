<section>
    <div class="container order-details-container mt-4 text-center">
      <h4 class="text-center user-login-header mt-4">All products</h4>
        <div class="row mt-3 p-2">
            <a style="width: 18%;" href="/admin/add-product" class="btn btn-success ml-auto">Add Products</a>
        </div>
        <table class="table mt-5" id="productsTable">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Catogery</th>
      <th scope="col">Price</th>
      <th scope="col">Discription</th>
      <th scope="col">Image</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
   {{#each products}}
    <tr>
      <th scope="row" id="number">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Catorgery}}</td>
       <td>{{this.Price}}</td>
      <td>{{this.Discription}}</td>
      <td><img style="width: 50px;height:50px" src="/product-images/{{this._id}}.png" alt=""></td>
      <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
          <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure to delete {{this.Name}}?')">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>
<script>
  $(document).ready( function () {
    $('#productsTable').DataTable();
} );
</script>